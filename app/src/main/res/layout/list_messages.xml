<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:padding="16dp"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/relativeLayout">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_msg_date"
              tools:text="2019-06-01"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
              android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent" tools:layout_conversion_wrapWidth="164"
              tools:layout_conversion_wrapHeight="43"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_msg_content"
              tools:text="content"
              android:maxLines="2"
              android:ellipsize="end"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
              android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_msg_date" tools:layout_conversion_wrapWidth="146"
              tools:layout_conversion_wrapHeight="56"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_msg_sender"
              tools:text="sender: senderName"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
              android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/tv_msg_content" tools:layout_conversion_wrapWidth="346"
              tools:layout_conversion_wrapHeight="50"/>

</androidx.constraintlayout.widget.ConstraintLayout>
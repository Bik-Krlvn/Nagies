<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   app:cardUseCompatPadding="true"
                                                   app:cardElevation="5dp"
                                                   app:cardCornerRadius="5dp"
                                                   android:layout_height="wrap_content"
>

    <RelativeLayout android:layout_width="match_parent"
                    android:padding="8dp"
                    android:background="@drawable/bg_list"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_msg_date"
                  android:padding="2dp"
                  android:fontFamily="sans-serif-condensed-medium"
                  tools:text="@string/label_teacher_login"
                  android:layout_height="wrap_content"
        />

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_msg_content"
                  android:maxLines="2"
                  android:fontFamily="sans-serif-condensed-light"
                  android:padding="2dp"
                  tools:text="@string/label_teacher_login"
                  android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                  android:layout_below="@id/tv_msg_date"
                  android:ellipsize="end"
                  android:layout_height="wrap_content"
        />

        <TextView android:layout_width="match_parent"
                  android:padding="2dp"
                  android:id="@+id/tv_msg_sender"
                  android:fontFamily="sans-serif-light"
                  tools:text="@string/label_teacher_login"
                  android:layout_below="@id/tv_msg_content"
                  android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                  android:layout_height="wrap_content"
        />

        <TextView android:layout_width="match_parent"
                  android:padding="2dp"
                  android:id="@+id/tv_msg_level"
                  android:fontFamily="sans-serif-light"
                  tools:text="@string/label_teacher_login"
                  android:layout_below="@id/tv_msg_sender"
                  android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                  android:layout_height="wrap_content"
        />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
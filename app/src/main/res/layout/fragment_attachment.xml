<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:id="@+id/root"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.teacher.fragment.AttachmentFragment"
>
    <Button
            android:text="@string/btn_label_upload_assignment"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_upload_assignment"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/btn_label_upload_report"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/btn_upload_report"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_upload_assignment"
            app:layout_constraintVertical_bias="0.101"/>
</androidx.constraintlayout.widget.ConstraintLayout>
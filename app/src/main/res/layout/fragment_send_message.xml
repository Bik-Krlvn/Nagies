<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="16dp"
              tools:context=".ui.parent.fragment.SendMessageFragment"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_message_content"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:background="@drawable/square_edit_text"
            android:hint="@string/hint_input_start_a_conversation"
            android:layout_height="wrap_content" tools:ignore="Autofill"/>

</LinearLayout>